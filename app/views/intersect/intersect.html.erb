<% if @todos.blank? %>
<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--6-col mdl-cell--3-offset mdl-cell--middle">
    <div class="mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title">
        <h2 class="mdl-card__title-text">Bummer</h2>
      </div>
      <div class="mdl-card__supporting-text">
        Sorry folks, your todo lists have no entries in common. Starbucks it is then?
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <a href="/intersect" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
          Try someone else?
        </a>
      </div>
    </div>
  </div>
</div>
<% else %>
<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--12-col">
    <h5>Here's what you both have on your todo lists</h5>
  </div>
  <% @todos.each do |todo| %>
  <div class="mdl-cell mdl-cell--4-col">
    <div class="demo-card-square mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title mdl-card--expand">
        <img src="<%= todo.photo_url %>"/>
      </div>
      <div class="mdl-card__supporting-text">
        <h6><%= todo.name %></h6>
        <%= todo.city if defined?(todo.city) %>
      </div>
      <div class="mdl-card__actions mdl-card--border">
        <a href="<%= todo.url %>" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
          Check it out
        </a>
      </div>
    </div>
  </div>
  <% end %>
</div>
<% end %>
